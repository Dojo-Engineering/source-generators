<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="OpenApiSchemas\accounts\**" />
    <Content Remove="OpenApiSchemas\accounts\**" />
    <EmbeddedResource Remove="OpenApiSchemas\accounts\**" />
    <None Remove="OpenApiSchemas\accounts\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Controllers\PaymentIntentsController.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Dojo.OpenApiGenerator.TestWebApi.csproj.DotSettings" />
    <None Remove="OpenApiSchemas\payment-intents\payment-intents.json.disabled" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Controllers\PaymentIntentsController.cs" />
    <Content Include="OpenApiSchemas\payment-intents\payment-intents.json.disabled" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Asp.Versioning.Mvc" Version="8.0.0" />
    <PackageReference Include="Asp.Versioning.Mvc.ApiExplorer" Version="8.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="7.0.14" />
    <PackageReference Include="Microsoft.OpenApi" Version="1.6.11" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="NSwag.AspNetCore" Version="13.20.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Dojo.AutoGenerators\Dojo.AutoGenerators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true">
	    <IncludeAssets>all</IncludeAssets>
	    <PrivateAssets>analyzers</PrivateAssets>
	</ProjectReference>
	<ProjectReference Include="..\Dojo.Generators.Abstractions\Dojo.Generators.Abstractions.csproj" />
    <ProjectReference Include="..\Dojo.OpenApiGenerator\Dojo.OpenApiGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true">
	    <IncludeAssets>all</IncludeAssets>
	    <PrivateAssets>analyzers</PrivateAssets>
	</ProjectReference>
</ItemGroup>

  <ItemGroup>
    <Content Update="OpenApiSchemas\hello-source-generators-api.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
